{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "bracketSameLine": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "arrowParens": "always",
        "endOfLine": "lf",
        "trailingComma": "all"
      }
    ]
  },
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module"
  },
  "parser": "babel-eslint"
}